<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Plugin.InputKit.Shared.Controls;assembly=Plugin.InputKit"
             x:Class="Sample.InputKit.Views.CheckBoxesPage"
             Title="CheckBoxes">
    <ContentPage.Content>
        <StackLayout x:Name="mainLayout" Padding="25" Spacing="15">

            <Button Text="Randomize Colors" Clicked="Button_Clicked" />

            <controls:CheckBox Text="Option 0 with Box Type" Type="Box" />
            <controls:CheckBox Text="Option 1 with Check Type" Type="Check"/>
            <controls:CheckBox Text="Option 2 wity Cross Type" Type="Cross"/>
            <controls:CheckBox Text="Option 3 with Custom Type" Type="Custom" CustomIcon="ic_account_balance_black"/>
            <controls:CheckBox Text="Option 4 with Material Type" Type="Material"/>
            <controls:CheckBox Text="Option 5 with Star Type" Type="Star"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>